# Server Configuration
PORT=3002
NODE_ENV=development

# Bags.fm API
BAGS_API_KEY=your_bags_api_key_here

# Database
DATABASE_PATH=./data/bagstats.db

# Apple Push Notifications (APNs)
# Get these from Apple Developer Portal > Certificates, Identifiers & Profiles > Keys
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_KEY_ID=your_key_id          # 10-character Key ID
APNS_TEAM_ID=your_team_id        # 10-character Team ID
APNS_BUNDLE_ID=xyz.bagstats.app  # Your app's bundle identifier

# Optional: Helius RPC for Solana
HELIUS_API_KEY=your_helius_api_key_here
